<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000BAC"
        android:backgroundTint="#D9D9D9"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del premio -->
        <ImageView
            android:id="@+id/ivPremio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Imagen del premio"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_premio" />

        <!-- Contenedor de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombrePremio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Premio"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPuntosPremio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0 puntos"
                android:textColor="#777777"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- BotÃ³n Canjear -->
        <Button
            android:id="@+id/btnCanjear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9E104"
            android:text="Canjear"
            android:textColor="#000000"
            app:cornerRadius="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
